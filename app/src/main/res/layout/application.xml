<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79f4cc2d">

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Logout"
        android:id="@+id/LogoutB"
        android:onClick="onBLogoutClick"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/RecommendationButton"
        android:layout_alignLeft="@+id/SearchDVDButton"
        android:layout_alignStart="@+id/SearchDVDButton"
        android:layout_marginLeft="1dp"
        android:background="#c3f5a70b"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Username"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/welcomeTV"
        android:layout_alignRight="@+id/ProfileButton"
        android:layout_alignEnd="@+id/ProfileButton" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Profile"
        android:id="@+id/ProfileButton"
        android:onClick="onProfileClick"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/Username"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="1dp"
        android:background="#e6f5a70b"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="DVD Search"
        android:id="@+id/SearchDVDButton"
        android:onClick="onDVDClick"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/ProfileButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="1dp"
        android:background="#d7f5a70b"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Recent Movies"
        android:id="@+id/RecentMoviesButton"
        android:onClick="onRecentMoviesClick"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/MovieSearchButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#9bf5a70b"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Movie Search"
        android:id="@+id/MovieSearchButton"
        android:onClick="onMovieSearchClick"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/ProfileButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f5a70b"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:layout_width="132dp"
        android:layout_height="100dp"
        android:text="RECOMMENDED MOVIES"
        android:id="@+id/RecommendationButton"
        android:onClick="onRecommendationClick"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/RecentMoviesButton"
        android:layout_alignRight="@+id/Username"
        android:layout_alignEnd="@+id/Username"
        android:layout_toEndOf="@+id/welcomeTV"
        android:background="#aff5a70b"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/ProfileButton"
        android:layout_alignStart="@+id/ProfileButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome,"
        android:id="@+id/welcomeTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:textSize="35dp"
        android:layout_marginTop="35dp" />

</RelativeLayout>